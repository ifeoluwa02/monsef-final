                        <div class="stat-item">
                            <span class="stat-num">500+</span>
                            <span class="stat-label">Projects</span>
                        </div>
                        <div class="stat-item">
                            <span class="stat-num">100%</span>
                            <span class="stat-label">Satisfaction</span>
                        </div>

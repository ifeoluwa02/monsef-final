<%- include('partials/header') %>

<main>
    <section class="hero" id="home">
        <div class="hero-slider" id="heroSlider">
            <div class="hero-slide active">
                <img src="/image/hero1.jpg" alt="Photography">
                <div class="hero-overlay"></div>
                <div class="container">
                    <div class="hero-content" data-aos="fade-right">
                        <h1>Capturing Your Dreams In Every Frame</h1>
                        <p>Welcome to Monsef Media and Entertainment. We bring your imagination to life through professional cinematic storytelling.</p>
                        <a href="https://wa.me/+2348107575289" class="btn-primary">Book a Session</a>
                    </div>
                </div>
            </div>
            
            <div class="hero-slide">
                <img src="/image/hero2.png" alt="Photoshoot">
                <div class="hero-overlay"></div>
                <div class="container">
                    <div class="hero-content">
                        <h1>Professional Studio Sessions</h1>
                        <p>Your story, our lens. We create timeless memories for your special moments.</p>
